---
import { Flex } from "@radix-ui/themes";
import { BaseTheme } from "../components/BaseTheme";
import { SectionBlitzKit } from "../components/SectionBlitzKit";
import { SectionEducation } from "../components/SectionEducation";
import { SectionHighlights } from "../components/SectionHighlights";
import { SectionIntro } from "../components/SectionIntro";
import { SectionJET } from "../components/SectionJET";
import { SectionJourney } from "../components/SectionJourney";
import { SectionNerdyBirds } from "../components/SectionNerdyBirds";
import { SectionOpenUAS } from "../components/SectionOpenUAS";
import { SectionPaintings } from "../components/SectionPaintings";
import { SectionPsyche } from "../components/SectionPsyche";
import { SectionZephron } from "../components/SectionZephron";
import { SubtleSeparator } from "../components/SubtleSeparator";
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout>
  <BaseTheme>
    <Flex
      justify="center"
      minHeight="100vh"
      style={{ background: "var(--gray-1)" }}
      py={{ initial: "0", lg: "9" }}
    >
      <Flex
        direction="column"
        flexGrow="1"
        maxWidth="80rem"
        style={{
          background: "var(--gray-3)",
          boxShadow: "var(--shadow-3)",
        }}
      >
        <SectionIntro client:only="react">
          <SectionIntro skeleton slot="fallback" />
        </SectionIntro>
        <SectionHighlights />
        <SectionJourney />
        <SectionEducation />
        <SectionOpenUAS />
        <SectionPsyche />
        <SectionZephron />
        <SectionJET />
        <SectionBlitzKit />
        <SectionNerdyBirds />

        <SubtleSeparator />

        <SectionPaintings />
      </Flex>
    </Flex>
  </BaseTheme>
</BaseLayout>
